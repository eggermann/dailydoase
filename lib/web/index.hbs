<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, minimum-scale=1.0">
    <title>DailyDoase</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
</head>

<body class="{{#if pageClass}}{{pageClass}} {{/if}}{{#if isHome}}home{{/if}}{{#if frame}}frame{{/if}}">

<div class="WRAPPER">
    <header class="c-header">
        <h1 class="c-title">
            <span data-aos-anchor-placement="bottom-center" data-aos-once='true' data-aos="fade-down">daily</span>
            <span data-aos-anchor-placement="top-center" data-aos-once='true' data-aos-delay="300" data-aos="fade-up">Doase</span>
            <span data-aos-anchor-placement="top-center" data-aos-once='true' data-aos-delay="500" data-aos="fade-down">🌴</span>
        </h1>

        <h2>
            {{#infoJson.words}}
                <span>{{this.[0]}}</span>
            {{/infoJson.words}}
        </h2>
    </header>

    <!--{_{>back-to-top-button}}-->
    <main style="display: none">

        <div class="c-panel">
            {{#unless images}}
                <img class="c-panel__bg"/>
            <p class="c-panel__content">{{ json}}</p>
            {{/unless}}

            {{#if images}}
                <ol class="c-panel__list">
                    {{#images}}
                        <li class="c-panel__list__item" data-aos-anchor-placement="top-bottom"
                            data-aos-duration="150">

                                <img class="c-panel__list__item__image"
                                     id="image{{json.name}}" data-mtime="{{mtime}}"
                                     loading="lazy" src="{{href}}"
                                     alt="image of {{json.prompt}}">

                            <span class="c-panel__list__item__infos">
                                     <a class="c-panel__list__item__link" href="{{href}}/img">
                                         {{json.prompt}}
                            </a>
                            <!--a href="{{href}}/mint">mint</a-->
                        </span>
                            <p class="c-panel__images__item___desc"></p>
                        </li>

                    {{/images}}
                </ol>
            {{/if}}
        </div>

        <div class="c-panel__list__content">
            <small class="realease">
                release 1
            </small>

            <div class="c-panel__content__info"></div>
        </div>

    </main>

    {{#if isHome}}
        {{log menu.[1].href}}
        <iframe loading="lazy" class="newest-folder" src="{{menu.[1].href}}?frame=true" frameborder="0"></iframe>
    {{/if}}
</div>


<aside class="c-aside">
    <!--h2>history</h2-->

    <nav class="c-aside__menu">
        <button class="c-aside__menu__button" value="schliessen/ öffnen">x</button>

        <ul>
            {{#menu}}

                {{#current}}
                <li class="current"> <a aria-current="true" href="{{href}}">{{name}}</a>
                {{/current}}

                {{^current}}
                <li> <a href="{{href}}">{{name}}</a>
                {{/current}}

                {{^../isHome}}
                    {{#current}}
                        <script>
                                {{#if../autoplay}} window.setTimeout(function () {
                                    document.getElementById('playPause').click();
                                }, 2000); {{/if}}
                        </script>

                        <div class="menu-actions">
                            <div class="playPause" onload="startAutoPlay()">
                                <input id="playPause" checked type="checkbox">
                                <label for="playPause"><span class="a-cessibility">toggle autoplay</span>
                                </label>
                            </div>

                            <div class="toggle-view">
                                <input id="toggleView" checked type="checkbox">
                                <label for="toggleView"><span class="a-cessibility">toggle view</span>
                                </label>
                            </div>
                        </div>


                    {{/current}}
                {{/../isHome}}
                <small class="image-cntr"> {{fileCnt}} </small>
            </li>
            {{/menu}}
        </ul>
    </nav>

    <i class="c-link-to-handmade-section">
        <a href="" class="">
            &nbsp; 𝒽𝒶𝓃𝒹𝓂𝒶𝒹𝑒 𝒸𝑜𝓁𝓁𝑒𝒸𝓉𝒾𝑜𝓃𝓈 &nbsp;&#127798;
        </a>
    </i>
</aside>



<footer class="c-footer">
    <p>&#9426;&nbsp;eggermann,
        <small>use it unt il down</small>
        🤗 to <big> <a href="https://huggingface.co/"></a>🤗</big>
    </p>

</footer>
</body>
</html>
